---
// Import the global styles
import '../styles/global.css';
import { HeroSection } from '../components/ui/hero-odyssey';
import { ServicesSection } from '../components/ui/services-section';
import { HowWeWorkEnhanced } from '../components/ui/how-we-work-enhanced';
import WhyLuumiSection from '../components/ui/why-luumi-section';
import TestimonialSlider from '../components/ui/testimonial-slider';
import { Cta4 } from '../components/ui/cta-4';
import { LuumiFooter } from '../components/ui/footer';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>Luumi Media - Message-Led Growth Systems That Scale</title>
		<meta name="title" content="Luumi Media - Message-Led Growth Systems That Scale" />
		<meta name="description" content="Transform scattered marketing into systematic growth. Paid media, funnels, content systems, and CMO-level strategy. No fluff, just results." />
		<meta name="keywords" content="growth marketing agency, performance marketing, B2B marketing agency, fractional CMO, paid media agency, marketing systems, conversion optimization" />
		<meta name="author" content="Luumi Media" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />
		<meta name="revisit-after" content="7 days" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Luumi Media - Message-Led Growth Systems That Scale" />
		<meta property="og:description" content="Transform scattered marketing into systematic growth. Paid media, funnels, content systems, and CMO-level strategy. No fluff, just results." />
		<meta property="og:site_name" content="Luumi Media" />
		<meta property="og:locale" content="en_US" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content="Luumi Media - Message-Led Growth Systems That Scale" />
		<meta property="twitter:description" content="Transform scattered marketing into systematic growth. Paid media, funnels, content systems, and CMO-level strategy. No fluff, just results." />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- Performance optimizations -->
		<link rel="prefetch" href="#services">
		<link rel="prefetch" href="#how-we-work">
		
		<!-- Schema markup -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "Luumi Media",
			"url": "https://luumimedia.com",
			"description": "Digital Growth That Actually Moves the Needle",
			"foundingDate": "2024",
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+91 987 654 3210",
				"contactType": "customer service",
				"email": "hello@luumimedia.com"
			},
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Bangalore",
				"addressCountry": "India"
			},
			"sameAs": [
				"https://linkedin.com/company/luumimedia",
				"https://twitter.com/luumimedia",
				"https://instagram.com/luumimedia"
			]
		}
		</script>
	</head>
	<body class="bg-white text-gray-900 font-sans antialiased">
		<!-- Lightning Hero Section -->
		<HeroSection client:load />

		<!-- Modern Services Section -->
		<ServicesSection client:load />

		<!-- Enhanced How We Work Section -->
		<HowWeWorkEnhanced client:load />

		<!-- Why Luumi Media - Consolidated Section -->
		<WhyLuumiSection client:load />

		<!-- Testimonials Section -->
		<TestimonialSlider client:load />

		<!-- Modern CTA Section -->
		<Cta4 client:load />

		<!-- Footer -->
		<LuumiFooter client:load />

		<script>
			// Smooth scrolling for navigation links
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e) {
					e.preventDefault();
					const target = document.querySelector(this.getAttribute('href'));
					if (target) {
						target.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
					// Close mobile menu after click
					const mobileMenu = document.getElementById('mobile-menu');
					if (mobileMenu) {
						mobileMenu.classList.add('hidden');
					}
				});
			});

			// Add scroll effect to header
			window.addEventListener('scroll', () => {
				const header = document.querySelector('header');
				if (window.scrollY > 10) {
					header.classList.add('shadow-sm');
				} else {
					header.classList.remove('shadow-sm');
				}
			});

			// Mobile menu toggle
			document.getElementById('mobile-menu-button').addEventListener('click', () => {
				const mobileMenu = document.getElementById('mobile-menu');
				mobileMenu.classList.toggle('hidden');
			});
		</script>
	</body>
</html>